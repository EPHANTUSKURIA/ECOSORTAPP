<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crdContent"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    android:layout_marginVertical="5dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="ECOSORT Tips"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/infoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Community Challenge: Take part in our (Zero Waste Week) challenge! Commit to reducing your waste for a week by avoiding single-use plastics and opting for reusable alternatives. Share your progress with the community using #ZeroWasteWeek. " />

    </LinearLayout>
</androidx.cardview.widget.CardView>